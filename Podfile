workspace 'FlickrApp'
project 'FlickrApp.xcodeproj/'

platform :ios, '8.0'

pod 'SAMKeychain'
pod 'AFNetworking', '~> 2.6.0' # There is a memory leak with AFNetworking >= 3.0
pod 'KVNProgress'

target "FlickrApp" do
  project 'FlickrApp.xcodeproj/'
  platform :ios, "8.0"

  pod 'Realm'
  pod 'RBQFetchedResultsController', :git => 'https://github.com/asqar/RBQFetchedResultsController.git'
  pod 'Realm+JSON', :git => 'https://github.com/asqar/Realm-JSON.git'

  pod 'SDWebImage'
  pod 'AFNetworking', '~> 2.6.0'
  pod 'SVPullToRefresh'

  pod 'Fabric'
  pod 'TwitterCore'
  pod 'Crashlytics'

end

target "FlickrAppUITests" do
  project 'FlickrApp.xcodeproj/'
  platform :ios, "8.0"

  pod 'Realm'
  pod 'RBQFetchedResultsController', :git => 'https://github.com/asqar/RBQFetchedResultsController.git'
  pod 'Realm+JSON', :git => 'https://github.com/asqar/Realm-JSON.git'

  pod 'SDWebImage'
  pod 'AFNetworking', '~> 2.6.0'
  pod 'SVPullToRefresh'

  pod 'Fabric'
  pod 'TwitterCore'
  pod 'Crashlytics'

end

target "FlickrAppTests" do
  project 'FlickrApp.xcodeproj/'
  platform :ios, "8.0"

  pod 'Realm'
  pod 'RBQFetchedResultsController', :git => 'https://github.com/asqar/RBQFetchedResultsController.git'
  pod 'Realm+JSON', :git => 'https://github.com/asqar/Realm-JSON.git'

  pod 'SDWebImage'
  pod 'AFNetworking', '~> 2.6.0'

end
